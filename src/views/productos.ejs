<%- layout('layouts/sistema.ejs') %>


<div class="container mt-9">
    <h2>Inventario de Productos</h2>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Imagen</th>
          <th>Nombre</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Categor√≠a</th>
          <th>Descripcion</th>
          <th>Precio</th>
          <th>Stock</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach((p, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
          
            <td><img src="<%= p.imagen %>" alt="<%= p.nombre %>" style="width: 70px;"></td>
            <td><%= p.nombre %></td>
            <td><%= p.marca %></td>
            <td><%= p.modelo %></td>
            <td><%= p.categoria %></td>
            <td><%= p.descripcion %></td>
            <td>$<%= p.precio.toFixed(2) %></td>
            <td><%= p.stock %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  